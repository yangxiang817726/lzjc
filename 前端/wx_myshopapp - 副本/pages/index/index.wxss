page {
	background: #eee;
}
.swiper-image {
	width: 100%;
	height: 100%;
}
.view_search{
	width: 100%;
	height: 125rpx;
	background: #ffffff;
	
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
.view_search text{
	font-size: 30rpx;
	color: #6c6c6c;
	padding-right: 10rpx;
	width: 100rpx;
	line-height: 30rpx;
	display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
	flex-shrink: 0;
}
.view_searchbg{
	width: 70%;
	height: 70rpx;
	border-style:solid;
	border-width: 2rpx;
	border-radius: 15rpx;
	border-color: #cdcdcd;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	
}

.input_search{
	flex-grow: 2;
	font: 29rpx;
	color: #cdcdcd;
    font-size:80%
	
	
}

.input_search{
	font: 14px;
	color: #999;
	margin-left: 25rpx;
}
.view1{
	height: 100%;
	width: 85rpx;
	flex: row;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.view1 image{
	height: 45rpx;
	width: 45rpx;
}
.line{
	height:100%;
	width: 2rpx;
	background: #cdcdcd;
}
/*功能区*/
.func-area {
	display: flex;
	flex-direction: row;
	margin: 0 0;
	padding-top: 10rpx;
	background: white;
}

.func-area view {
	width: 25%;
	text-align: center;
}

.func-area text{
	display: block;
	color: #6c6c6c;
	font-size: 30rpx;
	line-height: 50rpx;
}

.func-area image {
	width: 125rpx;
	height: 125rpx;
	
}
.container-class{

display: flex;
flex-direction: column;
}

/*主商品区*/
.container-goods {
	background: white;
	margin-top: 20rpx;

}
.category_title{
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-end;
}
.redline{
	
	height: 80rpx;
	width: 10rpx;
	background-color: red;
}
.container-goods .caption {
	font-size: 32rpx;
	width: 100%;
	line-height: 60rpx;
	text-indent: 20rpx;
	padding: 10rpx;
}

.main-goods {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	border-top: 1px solid #eee;
}

.main-goods .single-goods {
	width: 50%;
}

.main-goods image {
	width: 220rpx;
	height: 220rpx;
	display: block;
	margin: 20rpx auto;
}

.main-goods .title {
	display: block;
	color: #999;
	font-size: 28rpx;
	margin: 10rpx 6rpx;
	margin-left: 20rpx;
	line-height: 28rpx;
	display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
	flex-shrink: 0;
}

.main-goods .summary {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	
}

.main-goods .summary text {
	font-size: 28rpx;
	margin: 10rpx 20rpx;
}

.main-goods .summary .price {
	color: red;
}

.main-goods .summary .sale {
	color: gray;
}

.view-ad{
	margin-top: 20rpx;
	
	width: 100%;
	height: 600rpx;
	display: flex;
	flex-direction: column;
}

.ad-header{
	
	width: 100%;
	height: 400rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.ad-footer{
    
	width: 100%;
	height: 200rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.ad-footer image{
	width: 373rpx;
	height: 200rpx;
}
.ad1{
	width: 373rpx;
	height: 396rpx;
}

.header-right{
	width: 373rpx;
	height: 396rpx;
    display: flex;
	flex-direction: column-reverse;
	justify-content: space-between;
}

.header-right image{
	width: 373rpx;
	height: 196rpx;
}

.footer {
	
	display: flex; 
	flex-direction: row; 
	justify-content: space-between;
	position: fixed;
	bottom: 60rpx;
	right: 60rpx;
}

.footer image{
	position: fixed;
	bottom: 40rpx;
	right: 40rpx;
	width: 120rpx;
	height: 100rpx;
}