.view-head{
    width: 100%;
    height:220rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background: #f5f5f5;
}

.view-moneyinfo{
    
    display: flex;
    flex-direction: row;
    height: 60rpx;
    align-items: flex-end;
}

.text-money-prefix{
    font-size: 32rpx;
    color: orangered;
    margin-bottom: 10rpx;
}

.text-money{
